<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen4details"
    tools:context=".MainActivity4">


  <TextView
      android:id="@+id/detailedInfo"
      android:layout_width="404dp"
      android:layout_height="592dp"
      android:layout_weight="1"
      android:padding="8dp"
      android:text=""
      android:textAlignment="center"
      android:textSize="15sp"
      android:textStyle="bold|italic"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.4"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <Button
      android:id="@+id/backButton"
      android:layout_width="357dp"
      android:layout_height="57dp"
      android:backgroundTint="#4C5CB7FF"
      android:text="back"
      android:textAlignment="center"
      android:textColor="#060303"
      android:textSize="25dp"
      android:textStyle="italic|bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.875" />

  <Button
      android:id="@+id/mainScreenButton"
      android:layout_width="368dp"
      android:layout_height="52dp"
      android:backgroundTint="#36FFDC12"
      android:text="Start a new week"
      android:textAlignment="center"
      android:textColor="#040202"
      android:textSize="25dp"
      android:textStyle="italic|bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.961" />


</androidx.constraintlayout.widget.ConstraintLayout>